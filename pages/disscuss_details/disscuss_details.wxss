button{
  text-indent: 0;
  text-align: 0;
}
.btn{
  background-color: brown;
  color: aliceblue;
  text-indent: 0;
  text-align: center;
}
.discuss{
  margin: 20rpx;
  border-radius: 10rpx;
  /* opacity: 0.7; */
  border:2rpx solid white;
}
input{
  background-color: white;
  margin: 50rpx 20rpx;
  text-indent: 0;
  color: black;
}
.discuss view{
  font-size: 16px;
  margin: 20rpx auto;
}
.item{
  margin: 20rpx;
  padding: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  border-bottom:1px solid white;
}
.item:hover{
  overflow: visible;
  height: 100%;
  background-color: black;
}
.add{
  position: fixed;
  color: black;
  left:100rpx;
  right: 100rpx;
  top: 100rpx;
  border-radius: 20rpx;
  background-color: white;
  border:1px solid white;
  font-size: 14px;
  /* background-color: blanchedalmond; */
  padding: 20rpx;
  text-indent: 0;
  text-align: center;
  opacity: 100%;
}
.add input{
  color: black;
  background-color: white;
  border:1px solid tomato;
}
.submit{
  display: flex;
  justify-content: center;
}